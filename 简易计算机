#include<stdio.h> #include<string.h> void main() { char strexp[]="3+4"; int left=strexp[0]-'0'; int right=strexp[2]-'0'; int res=left+right; printf("res=%d\n",res);/0

char strexp[]="1+2+2+1+2+5+4-1-3+4-8";
int res=strexp[0]-'0';
for(int i=1;i<strlen(strexp);i++)
{
	if(strexp[i]=='+')
	{
		int right=strexp[i+1]-'0';
		res=res+right;
		i++;
	}
	else if(strexp[i]=='-')
	{
		int left=strexp[i+1]-'0';
		res=res-left;
		i++;
	}
}
printf("res=%d\n",res);/1

char strexp[]="2*2/4*1/1*2*3/2";
int res=strexp[0]-'0';
for(int i=1;i<strlen(strexp);i++)
{
	if(strexp[i]=='*')
	{
		int right=strexp[i+1]-'0';
		res=res*right;
		i++;
	}
	else if(strexp[i]=='/')
	{
		int left=strexp[i+1]-'0';
		res=res/left;
		i++;
	}
}
printf("res=%d\n",res);//v2

char strexp[]="2+2*3+2/2-1";
int res;
for(int i=1;i<strlen(strexp);i++)
{
	if(strexp[i]=='*')
	{
		int c=strexp[i+1]-'0';
	    int a=strexp[i-1]-'0';
		res=a*c;
		i++;
	}
    if(strexp[i]=='/')
	{
		int q=strexp[i+1]-'0';
		int l=strexp[i-1]-'0';
		 res=res+q/l;	
		i++;
	}		
	if(strexp[i]=='+')
	{
		int w=strexp[0]-'0';
		res=res+w;
		i++;
	}
	if(strexp[i]=='-')
	{
		int t=strexp[i+1]-'0';
	    res=res-t;
		i++;
	}
}
	printf("res=%d",res);//v3
}
